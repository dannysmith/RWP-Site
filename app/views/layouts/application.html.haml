!!! Strict
%html
  %head
    %title
      = h(yield(:title) || "Untitled")
    = stylesheet_link_tag 'application'
    
    = javascript_include_tag "jquery-1.3.2.min"
    = javascript_include_tag "jquery.wysiwyg"
    = javascript_include_tag "jquery.tablesorter.min"
    
    = javascript_include_tag "application"
    
    
    = yield(:head)
  %body
    #container
      #header
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"

        - if show_title?
          %h1
            = h(yield(:title))
        
        = link_to "Home", root_path
        = link_to "Products", products_path
        = link_to "Cart", cart_path unless logged_in_as_admin?
        = link_to "Blog", blog_path if $site.display_blog?
        = link_to "Ethos", ethos_path
        - if logged_in?
          = link_to "Orders", orders_path
          = link_to "Logout", logout_path
          = link_to "Account", account_path
        -else
          = link_to "Logo In", login_path
          
        - if logged_in_as_admin?
          = link_to "Users", users_path
          = link_to "Edit CSS"
          = link_to "Site Settings", settings_path
          
      #content
        = yield
