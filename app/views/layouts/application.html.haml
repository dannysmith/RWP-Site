!!! Strict
%html
  %head
    %title
      = h(yield(:title) || "Untitled")
    = stylesheet_link_tag 'application'
    
    %script{:type => "text/javascript", :src => "http://www.google.com/jsapi"}
    %script{:type => "text/javascript"}
      google.load("jquery", "1.3")
    
    -# javascript_include_tag "jquery-1.3.2.min"
    = javascript_include_tag "tiny_mce/jquery.tinymce"
    = javascript_include_tag "jquery.tablesorter.min"
    
    = javascript_include_tag "application"
    
    
    = yield(:head)
  %body
    #container
      #header
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"

        - if show_title?
          %h1
            = h(yield(:title))
        
        = link_to "Home", :root
        = link_to "Products", :products
        = link_to "Cart", :cart unless logged_in_as_admin?
        = link_to "Blog", :blog if $site.display_blog?
        = link_to "Ethos", :ethos
        
        - if logged_in_as_admin?
          - $site.pages.each do |page|
            = link_to page.name.capitalize, page.name
            = "<span class='small'>[off]</span>" if page.disabled?
        - else
          - $site.active_pages.each do |page|
            = link_to page.name.capitalize, page.name

        - if logged_in?
          = link_to "Orders", :orders
          = link_to "Logout", :logout
          = link_to "Account", :account
        -else
          = link_to "Log In", :login
          
        - if logged_in_as_admin?
          = link_to "Users", :users
          = link_to "Edit CSS"
          = link_to "Site Settings", :settings
          
      #content
        = yield
      #sidebar
      #footer
        %p.small
          &copy; Copyright #{Time.now.year} RWP Group. All Rights Reserved
          |
          Registered in Englad & Wales No. 03793616
          |
          VAT No. 619 5985 83
          |
          =link_to "Privacy Policy", :controller => :welcome, :action => :privacy
          |
          =link_to "Contact"
