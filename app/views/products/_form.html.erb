<% form_for @product do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :offer_price %><br />
    <%= f.text_field :offer_price %>
  </p>
  <p>
    <%= f.label :disabled %><br />
    <%= f.check_box :disabled %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
